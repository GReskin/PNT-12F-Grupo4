@model IEnumerable<App.Models.Clase>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de clases</h1>

<p>
    <button class="btn btn-primary">
        <a asp-action="Create" style="color:white">Crear nuevo</a>
    </button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idClase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreClase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.linkVideo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaClase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.curso)   
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idClase)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.nombreClase)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.linkVideo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaClase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.curso.nombreCurso)   
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idClase">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idClase">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.idClase">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
