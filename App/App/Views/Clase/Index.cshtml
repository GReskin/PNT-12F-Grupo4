@model IEnumerable<App.Models.Clase>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idClase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreClase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numeroClase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.linkVideo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idCurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.curso)   
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.idClase)
                </th>
            <td>
                @Html.DisplayFor(modelItem => item.nombreClase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numeroClase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.linkVideo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idCurso)   
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.curso.nombreCurso)   
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idClase">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idClase">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idClase">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
