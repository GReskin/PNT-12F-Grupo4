@foreach (var item in Model) {
        <tr>
                 <td>
                    @Html.DisplayFor(modelItem => item.idUsuario)
                </td>
            <td>
                    @Html.DisplayFor(modelItem => item.nombreUsuario)
            </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.emailUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.edadUsuario)
                </td>
